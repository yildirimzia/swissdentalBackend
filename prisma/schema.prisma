generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CmsPageStatus {
  draft
  published
}

model Page {
  id             String         @id @default(uuid())
  slug           String         @unique
  title          String
  excerpt        String?
  heroTitle      String?
  heroSubtitle   String?
  heroImage      String?
  content        String
  status         CmsPageStatus  @default(draft)
  seoTitle       String?
  seoDescription String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}
